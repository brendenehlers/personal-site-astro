---
import Header from '../components/Header.astro'
import BlurCircle from '@/components/shared/BlurCircle.astro'
import theme from '@/data/theme'
import SEOTags from '@/components/seo/SEOTags.astro'

import '@fontsource/open-sans'
import '@/styles/tailwind.css'
import '@/styles/post.css'

export interface Props {
  title?: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <!-- Google tag (gtag.js) -->
    <script async src='https://www.googletagmanager.com/gtag/js?id=G-R5VCX95RPG'
    ></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || []
      function gtag() {
        // eslint-disable-next-line no-undef
        dataLayer.push(arguments)
      }
      gtag('js', new Date())

      gtag('config', 'G-R5VCX95RPG')
    </script>
    <!-- END Google tag -->
    <SEOTags title={title} />
  </head>

  <body
    class='mx-auto flex min-h-screen max-w-[872px] flex-col gap-9 bg-background px-10 py-8 text-sm text-text md:gap-20 md:py-16'
  >
    <Header />
    <BlurCircle position='top' color={theme.colors.blur.top} />
    <BlurCircle position='bottom' color={theme.colors.blur.bottom} />
    <slot />
    <style is:global>
      html {
        font-family: 'Open Sans';
      }
    </style>
  </body>
</html>
