---
import Link from "./shared/Link.astro"
import presentation, { Social } from "@/data/presentation"
---

<ul role="list" class="flex flex-row gap-2">
  {
    presentation.socials.map((social: Social, index: number) => (
      <>
        <li>
          <Link href={social.link} label={social.label} rel="noreferrer" target="_blank" />
        </li>

        {presentation.socials.length - 1 !== index && <li>/</li>}
      </>
    ))
  }
</ul>
